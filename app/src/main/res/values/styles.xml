<resources>

    <style name="AppCommon" parent="Theme.AppCompat.Light">
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="cardViewStyle">@style/CardViewStyle</item>
        <item name="drawerArrowStyle">@style/DrawerArrowToggle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/uw_yellow</item>
        <item name="colorPrimaryDark">@color/uw_yellow_dark</item>
        <item name="colorAccent">@color/uw_accent</item>
        <item name="colorControlNormal">@android:color/black</item>
        <item name="colorControlHighlight">@color/uw_yellow_pressed</item>
        <item name="colorControlActivated">@color/uw_accent</item>
    </style>

    <style name="AppTheme" parent="AppCommon"></style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- TextAppearances -->

    <style name="TextAppearance.UWaterloo.Display1" parent="@style/TextAppearance.AppCompat.Display1" />

    <style name="TextAppearance.UWaterloo.Display2" parent="@style/TextAppearance.AppCompat.Display2" />

    <style name="TextAppearance.UWaterloo.Display3" parent="@style/TextAppearance.AppCompat.Display3" />

    <style name="TextAppearance.UWaterloo.Display4" parent="@style/TextAppearance.AppCompat.Display4" />

    <style name="TextAppearance.UWaterloo.Headline" parent="@style/TextAppearance.AppCompat.Headline" />

    <style name="TextAppearance.UWaterloo.Subhead" parent="@style/TextAppearance.AppCompat.Subhead" />

    <style name="TextAppearance.UWaterloo.Title" parent="@style/TextAppearance.AppCompat.Title" />

    <style name="TextAppearance.UWaterloo.Body1" parent="@style/TextAppearance.AppCompat.Body1" />

    <style name="TextAppearance.UWaterloo.Body2" parent="@style/TextAppearance.AppCompat.Body2" />

    <style name="TextAppearance.UWaterloo.Caption" parent="@style/TextAppearance.AppCompat.Caption" />

    <style name="TextAppearance.UWaterloo.Large" parent="@style/TextAppearance.AppCompat.Large" />

    <style name="TextAppearance.UWaterloo.Small" parent="@style/TextAppearance.AppCompat.Small" />

    <!-- Widget Styles -->

    <style name="AppTheme.Widget" parent="@android:style/Widget"></style>

    <style name="AppTheme.Widget.TextView" parent="android:Widget.DeviceDefault.Light.TextView">
        <item name="fontPath">@string/font_book</item>
    </style>

    <style name="DrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/uw_yellow</item>
        <item name="spinBars">false</item>
    </style>

    <style name="CardListView">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="CardViewListItem" parent="@style/CardViewStyle">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="CardViewStyle" parent="@style/CardView.Light" />

    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:id">@id/toolbar</item>
        <item name="android:theme">@style/ToolbarTheme</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/uw_yellow</item>
        <item name="layout_collapseMode">pin</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/uw_yellow</item>
        <item name="android:textColorPrimary">@color/uw_yellow</item>
        <item name="android:textColorSecondary">@color/uw_yellow</item>
    </style>

    <style name="OperatingHoursRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="OperatingHoursBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="OperatingHoursBase.Label">
        <item name="android:id">@id/view_location_hours_day</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="OperatingHoursBase.Value">
        <item name="android:id">@id/view_location_hours_hours</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="LocationClosedSection" parent="OperatingHoursBase.Value">
        <item name="android:layout_alignParentEnd">false</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MenuTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="EventProperty" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="LayerParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LayerLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?listPreferredItemHeightSmall</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:drawablePadding">16dp</item>
    </style>

    <style name="LayerCheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>
