<?xml version="1.0" encoding="utf-8"?>
<io.github.wztlei.wathub.ui.view.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/course_info_title"
            style="@style/TextAppearance.UWaterloo.Title"
            fontPath="@string/font_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            tools:text="Introduction to Programming" />

        <TextView
            android:id="@+id/course_info_description"
            style="@style/TextAppearance.UWaterloo.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            tools:text="Description of course" />

    </LinearLayout>

</io.github.wztlei.wathub.ui.view.CardView>