<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_header_clickable"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="?colorPrimary"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Light">

    <TextView
        android:id="@+id/navigation_header_title"
        style="@style/TextAppearance.UWaterloo.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        tools:text="Good morning!" />

    <TextView
        android:id="@+id/navigation_header_subtitle"
        style="@style/TextAppearance.UWaterloo.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="You're looking nice today." />

</LinearLayout>