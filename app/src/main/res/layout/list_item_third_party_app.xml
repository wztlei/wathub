<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <io.github.wztlei.wathub.ui.view.CardView
        android:id="@+id/third_party_app_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CardViewListItem">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/third_party_app_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="16dp"
                android:importantForAccessibility="no"
                tools:background="@drawable/ic_layers" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/third_party_app_name"
                    style="@style/TextAppearance.UWaterloo.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="32dp"
                    tools:text="Module Title" />

                <TextView
                    android:id="@+id/third_party_app_description"
                    style="@style/TextAppearance.UWaterloo.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    tools:text="Module Description" />

            </LinearLayout>

        </LinearLayout>

    </io.github.wztlei.wathub.ui.view.CardView>

</FrameLayout>
