<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?colorPrimary"
    android:gravity="center">

    <TextView
        android:id="@+id/date_picker_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="@string/date_picker_week_label"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/date_picker_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/date_picker_label"
        android:layout_toEndOf="@id/date_picker_label"
        android:background="?selectableItemBackground"
        android:gravity="center"
        android:minWidth="0dp"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="16dp"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        tools:text="August 16, 2015" />

</RelativeLayout>
