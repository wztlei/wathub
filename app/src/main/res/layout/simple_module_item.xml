<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <io.github.wztlei.wathub.ui.view.CardView
            style="@style/CardViewListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/selectable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal">

            <ImageView
                    android:id="@android:id/icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="16dp"
                    android:importantForAccessibility="no"
                    tools:background="@drawable/ic_layers" />

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                <TextView
                        style="@style/TextAppearance.UWaterloo.Title"
                        android:id="@android:id/text1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:minHeight="32dp"
                        tools:text="Module Title" />

                <TextView
                        style="@style/TextAppearance.UWaterloo.Small"
                        android:id="@android:id/text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        tools:text="Module Description" />

            </LinearLayout>

        </LinearLayout>

    </io.github.wztlei.wathub.ui.view.CardView>

</merge>
