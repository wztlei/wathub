<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.gms.maps.MapView
        android:id="@+id/goosewatch_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/goosewatch_empty_view"
        style="@style/TextAppearance.UWaterloo.Subhead"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="16dp"
        android:text="@string/goosewatch_no_nests"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/goosewatch_nest_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:animateLayoutChanges="true"
        android:background="?colorPrimary"
        android:elevation="16dp"
        android:visibility="gone">

        <include layout="@layout/simple_two_line_item" />

    </FrameLayout>

</RelativeLayout>
